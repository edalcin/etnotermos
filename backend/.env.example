# EtnoTermos Environment Configuration

# Node Environment
NODE_ENV=development

# Server Ports
PUBLIC_PORT=4000
ADMIN_PORT=4001

# MongoDB Configuration
MONGO_URI=mongodb://localhost:27017/etnodb
MONGO_DB_NAME=etnodb
MONGO_COLLECTION_NAME=etnotermos

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:4000,http://localhost:4001

# Rate Limiting
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX=100

# Admin Authentication
ADMIN_USERNAME=admin
ADMIN_PASSWORD=changeme
