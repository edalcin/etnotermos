    </a>
  </div>

  <!-- Collections Grid -->
  <div x-show="!loading && collections.length > 0" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <template x-for="collection in collections" :key="collection._id">
      <div class="bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition-shadow">
        <!-- Collection Header -->
        <div class="mb-4">
          <h3 class="text-xl font-bold text-forest-700 mb-2" x-text="collection.name"></h3>
          <p class="text-sm text-gray-600 min-h-[3rem]" x-text="truncateText(collection.description || 'Sem descriÃ§Ã£o', 100)"></p>
        </div>

        <!-- Collection Stats -->
        <div class="mb-4 flex items-center gap-2">
          <span class="px-3 py-1 bg-forest-100 text-forest-700 rounded-full text-sm font-medium">
            <span x-text="termCounts[collection._id] || 0"></span> termos
          </span>
        </div>

        <!-- Collection Metadata -->
        <div class="text-xs text-gray-500 mb-4 space-y-1">
