  <title><%= title %> | EtnoTermos Admin</title>
  <link href="/assets/styles.css?v=<%= Date.now() %>" rel="stylesheet">
  <script src="https://unpkg.com/htmx.org@1.9.10"></script>
  <script defer src="https://unpkg.com/alpinejs@3.13.5/dist/cdn.min.js"></script>
</head>
<body class="bg-forest-50 min-h-screen flex flex-col">
  <%- include('partials/header') %>
  <main class="flex-grow container mx-auto px-4 py-8">

<div x-data="{
  collections: [],
  loading: true,
  termCounts: {},
  async init() {
    await this.loadCollections();
  },
  async loadCollections() {
    this.loading = true;
    try {
      const response = await fetch('/api/v1/collections');

      if (!response.ok) {
        throw new Error(`HTTP error! status: ${response.status}`);
      }

      const data = await response.json();
      console.log('Collections API response:', data);
      console.log('Is array?', Array.isArray(data));

      this.collections = Array.isArray(data) ? data : [];
      console.log('Collections loaded:', this.collections.length);

      // Load term counts for each collection
      for (const collection of this.collections) {
        await this.loadTermCount(collection._id);
      }
    } catch (error) {
      console.error('Error loading collections:', error);
      alert('Erro ao carregar coleÃ§Ãµes: ' + error.message);
      this.collections = [];
    } finally {
      this.loading = false;
    }
  },
  async loadTermCount(collectionId) {
    try {
      const response = await fetch(`/api/v1/collections/${collectionId}/terms?limit=1`);
      const data = await response.json();
      this.termCounts[collectionId] = data.pagination?.total || 0;
    } catch (error) {
      console.error('Error loading term count:', error);
      this.termCounts[collectionId] = 0;
    }
  },
  async deleteCollection(id, name) {
    const message = 'Tem certeza que deseja excluir a coleÃ§Ã£o ' + name + '? Ela serÃ¡ removida de todos os termos associados.';
    if (!confirm(message)) return;

    try {
      const response = await fetch(`/api/v1/collections/${id}`, {
        method: 'DELETE'
      });

      if (response.ok) {
        await this.loadCollections();
        alert('ColeÃ§Ã£o excluÃ­da com sucesso!');
      } else {
        alert('Erro ao excluir coleÃ§Ã£o.');
      }
    } catch (error) {
      console.error('Error deleting collection:', error);
      alert('Erro ao excluir coleÃ§Ã£o.');
    }
  },
  truncateText(text, maxLength) {
    if (!text) return '';
    if (text.length <= maxLength) return text;
    return text.substring(0, maxLength) + '...';
  },
  formatDate(dateString) {
    return new Date(dateString).toLocaleDateString('pt-BR');
  },
  exportCollection(id, format) {
    // Placeholder for future export functionality
    alert('Funcionalidade de exportaÃ§Ã£o em desenvolvimento. Formato: ' + format);
  }
}">

  <!-- Header and Actions -->
  <div class="flex justify-between items-center mb-6">
