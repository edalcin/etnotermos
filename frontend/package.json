{
  "name": "etnotermos-frontend",
  "version": "1.0.0",
  "description": "EtnoTermos frontend - Tailwind CSS build system",
  "scripts": {
    "build:css:public": "cd .. && node frontend/node_modules/tailwindcss/lib/cli.js -i ./frontend/src/styles/input.css -o ./backend/src/contexts/public/views/assets/styles.css --minify",
    "build:css:admin": "cd .. && node frontend/node_modules/tailwindcss/lib/cli.js -i ./frontend/src/styles/input.css -o ./backend/src/contexts/admin/views/assets/styles.css --minify",
    "build:css": "npm run build:css:public && npm run build:css:admin",
    "watch:css": "cd .. && node frontend/node_modules/tailwindcss/lib/cli.js -i ./frontend/src/styles/input.css -o ./backend/src/contexts/public/views/assets/styles.css --watch",
    "build": "npm run build:css"
  },
  "keywords": [
    "tailwindcss",
    "etnodb",
    "forest-theme"
  ],
  "author": "EtnoTermos Team",
  "license": "MIT",
  "devDependencies": {
    "tailwindcss": "^3.4.1",
    "postcss": "^8.4.33",
    "autoprefixer": "^10.4.16"
  }
}
